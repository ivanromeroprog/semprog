<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seminarioprogramacion.controlador.LoginController">
   <children>
      <Label text="Ingreso al Sistema">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label prefWidth="60.0" text="Usuario">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
            <TextField prefHeight="25.0" prefWidth="149.0">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin></TextField>
         </children>
      </HBox>
      <FlowPane>
         <children>
            <Label prefWidth="60.0" text="Clave">
               <FlowPane.margin>
                  <Insets top="5.0" />
               </FlowPane.margin></Label>
            <TextField>
               <FlowPane.margin>
                  <Insets left="5.0" />
               </FlowPane.margin></TextField>
         </children>
      </FlowPane>
      <Button fx:id="btningreso" onAction="#switchToMain" text="Ingresar" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
