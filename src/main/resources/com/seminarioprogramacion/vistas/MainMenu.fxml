            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Reportes">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#switchToReporteMensual" text="Infome mensual" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Sistema">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#acercaDe" text="Acerca de..." />
                  <MenuItem mnemonicParsing="false" onAction="#CloseApp" text="Salir " />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
