   <children>
      <MenuBar fx:id="menup">
        <menus>
          <Menu mnemonicParsing="false" text="Turnos">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#switchToTurnos" text="Gestión de Turnos" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Prestaciones">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#switchToPrestacionesListado" text="Listado de prestaciones" />
